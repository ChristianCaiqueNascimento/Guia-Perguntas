<%- include('partials/header') %>

<body>
  <%- include('partials/navbar') %>
    
    <div class="container">

        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>

        <form method="POST" action="/responder">
          <h3>Responda</h3>
          <label>Resposta:</label>
          <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button type="submit" class="btn btn-primary">Responder</button>
        </form>

        <h3>Respostas</h3>
        <% respostas.forEach(resposta => {%>
          <div class="card">
            <div class="card-body">
              <p><%= resposta.corpo %></p>
            </div>
          </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer') %>